
@{
    ViewData["Title"] = "Listar Ativos";
}
<div class="row">
    <div class="col-xs-12 col-sm-8">
        <div class="card">
            <div class="card-header"><strong>Lista de Ativos</strong></div>
            <div class="card-body">
                Lista de Ativos...
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-4">
        <div class="d-sm-none">&nbsp;</div>
        <div class="form-group">
            <button class="form-control btn btn-primary" title="Registrar um novo Ativo.">Registrar Ativo</button>
        </div>
        <div class="card">
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label for="nomeAtivo">Nome do Ativo</label>
                        <input type="text" class="form-control" id="nomeAtivo" placeholder="Nome ou parte do ativo">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="hasBaixado">
                        <label class="form-check-label" for="hasBaixado">Exibir os ativos Baixados</label>
                    </div>
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary">Filtrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
